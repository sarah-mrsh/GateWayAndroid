<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.fanp.presentation.serialactivity.SerialViewModel" />
    </data>

<RelativeLayout

    android:layout_width="match_parent"
    android:background="?attr/main_back"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context=".presentation.serialactivity.SerialActivity">

    <include layout="@layout/header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.fanp.utils.Shabnammid
            android:id="@+id/title_port_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/serialsetting"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="23sp" />






        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="350dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:padding="18sp"
                android:layout_weight="0.5"
                android:background="@drawable/yellowborder"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <Switch
                        android:text="@string/switch_on"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#45000000"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/rs232port"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/Baudrate"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/Stopbit"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/parity"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/parity"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/databit"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="18sp"
                android:layout_weight="0.5"
                android:background="@drawable/yellowborder"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <Switch
                        android:text="@string/switch_on"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#45000000"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/rs485port"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/Baudrate"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/Stopbit"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/parity"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/parity"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.example.fanp.utils.Shabnambold
                        android:text="@string/databit"
                        android:padding="6dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:padding="6dp"
                        android:entries="@array/baudrate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>









    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/transparent_yellow_border"
                android:textColor="@color/white" />

            <com.example.fanp.utils.Shabnammid
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_vertical"
                android:maxLines="1"
                android:text="@string/save"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/transparent_yellow_border"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_vertical"
                android:maxLines="1"
                android:text="@string/back"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/transparent_yellow_border"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/button_protocol_cancelrequest_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_vertical"
                android:maxLines="1"
                android:text="@string/add"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/transparent_yellow_border"
                android:textColor="@color/white" />

            <com.example.fanp.utils.Shabnammid
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_vertical"
                android:maxLines="1"
                android:text="@string/back"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>








    </LinearLayout>

    </RelativeLayout>


</layout>